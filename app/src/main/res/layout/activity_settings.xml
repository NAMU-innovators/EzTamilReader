<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="Language" android:textStyle="bold" android:textSize="16sp"/>
    <RadioGroup
        android:id="@+id/rgLangSettings"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton android:id="@+id/rbBoth" android:text="தமிழ் + English"/>
        <RadioButton android:id="@+id/rbTamil" android:text="தமிழ்"/>
    </RadioGroup>
</LinearLayout>
